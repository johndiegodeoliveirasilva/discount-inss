<div class="card mb-4 shadow-sm">
  <div class="card-header">
    <h4 class="my-0 font-weight-normal"><%= proposer_item.name.capitalize %></h4>
  </div>
  <%= image_tag dish_item.avatar, width: '100%' %>
  <div class="card-body">
    <h1 class="card-title pricing-card-title">$<%= dish_item.total %> <small class="text-muted">/ mo</small></h1>
    <ul class="list-unstyled mt-3 mb-4">
      <li><%= dish_item.description%>.</li>
    </ul>
    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group" role="group">
        <%= link_to "Show", dish_path(dish_item), class: "fixed-bottom btn btn btn-outline-primary"%>
        <%= link_to "Edit", edit_dish_path(dish_item), class: "fixed-bottom btn btn-outline-primary" if logged_in?(:site_admin)%>
      </div>
    </div>
  </div>
</div>

<%= search_form_for @q do |f| %>
  <section class="text-white py-3">
    <div class="container py-3 my-3 ">
      <div class="row text-center pb-4">
        <div class="col-md-12">
          <h2 class="text-white">Search</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <div class="form-group">
                      <%= f.search_field :full_name_cont, placeholder: "full
                      name", class: "form-control"%>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <div class="form-group">
                      <%= f.search_field :document_cont, placeholder: "document" ,
                      class: "form-control" %>
                    </div>
                  </div>
                </div>
              </div>
              <br />

              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <div class="form-group">
                      <%= f.label :birth_date_gteq, "Birth Date Greater Than" %>
                      <%= f.date_field :birth_date_gteq, placeholder:
                      "birth_date", class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <div class="form-group">
                      <%= f.label :birth_date_gteq, "Birth Date Less Than" %> <%=
                      f.date_field :birth_date_lteq, placeholder: "birth_date",
                      class: "form-control" %>
                    </div>
                  </div>
                </div>
              </div>
              <br />
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <div class="form-group">
                      <%= f.label :birth_date_gteq, "Income Greater Than" %> 
                      <%= f.number_field :income_gteq, placeholder: "income grant than",
                      class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <div class="form-group">
                      <%= f.label :income_lteq, "Income Less Than" %>
                      <%= f.number_field :income_lteq, placeholder: "income less than", class: "form-control" %>
                    </div>
                  </div>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-md-3">
                  <%= f.submit "Submit", class: "btn btn-warning  pl-5 pr-5" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

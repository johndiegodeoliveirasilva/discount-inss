
<div class="form-group nested-fields">
  <div class="fields">
    <%= f.label :number %>
    <%= f.text_field :number, class: 'form-control' %>
  </div>

  <div class="fields">
    <%= f.label :phone_type %>
  <%= f.select :phone_type, options_for_select([['Personal', 'personal'], ['Reference', 'reference']]), { prompt: 'Select phone type' }, class: 'form-control' %>
  </div>
  <%= link_to_remove_association 'Remove Phone', f, class: 'btn btn-danger my-2'%>
</div>